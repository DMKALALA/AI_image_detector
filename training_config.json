{
    "dataset": {
        "name": "anonymous1233/twitter_AII",
        "max_samples": 2000,
        "test_size": 0.2,
        "val_size": 0.1
    },
    "model": {
        "backbone": "microsoft/resnet-50",
        "num_classes": 2,
        "dropout": 0.3
    },
    "training": {
        "epochs": 5,
        "batch_size": 8,
        "learning_rate": 1e-4,
        "weight_decay": 1e-5
    },
    "data_augmentation": {
        "enabled": true,
        "rotation": 15,
        "brightness": 0.2,
        "contrast": 0.2,
        "saturation": 0.2
    },
    "paths": {
        "model_save_path": "trained_ai_detector.pth",
        "plots_save_path": "training_plots/",
        "logs_save_path": "training_logs/"
    }
}
